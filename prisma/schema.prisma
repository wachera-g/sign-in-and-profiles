generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid()) //generate a safe unique string id automatically
  name         String
  email        String   @unique //prevents duplicates
  passwordHash String
  createdAt    DateTime @default(now())  //sets createdAt automatically
  updatedAt    DateTime @updatedAt  // updates the timestamps whenever the row changes
}
